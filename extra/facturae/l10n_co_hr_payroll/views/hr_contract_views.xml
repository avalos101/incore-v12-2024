<incore>
    <record id="hr_contract_view_form_l10n_co_payroll" model="ir.ui.view">
        <field name="name">hr.contract.view.form.l10n.co.payroll</field>
        <field name="model">hr.contract</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='struct_id']" position="after">
                <field name="type_worker_id"/>
                <field name="subtype_worker_id"/>
                <field name="high_risk_pension"/>
                <field name="integral_salary"/>
                <field name="type_contract_id"/>
            </xpath>
        </field>
    </record>
</incore>