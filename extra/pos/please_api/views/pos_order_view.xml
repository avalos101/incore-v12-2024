<?xml version="1.0" encoding="utf-8"?>
<incore>
	<record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//h2[@name='order']" position="before">
        		<div class="row mt16" id="please_api">
                    <label for="please_id" class="col-lg-2"/>
                    <field name="please_id"/>
                </div>
        	</xpath>
    	</field>
    </record>

    <record id="view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
        	<group name="order_fields" position="inside">
                <field name="order_please_id" options="{'no_create': True, 'no_open': True}"/>
                <field name="to_please" readonly="True"/>
        	</group>
    	</field>
    </record>
</incore>