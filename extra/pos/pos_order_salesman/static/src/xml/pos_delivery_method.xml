<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PosTicket">
        <t t-jquery=".receipt-user" t-operation="after">
            <t t-if="widget.pos.config.enable_delivery">
            <br/>
            Vendedor : <t t-esc="order.delivery_method.name"/><br/>
            </t>
        </t>
    </t>

    <t t-name="SetDeliveryMethodButton">
        <div class='control-button'>
            <i class='fa fa-users' role="img" aria-label="Set delivery method" title="Set delivery method"/> <t t-esc='widget.get_current_delivery_method_name()'/>
        </div>
    </t>

</templates>