<?xml version="1.0"?>
<incore>

    <record id="pos_receipt_note_custom_view_form" model="ir.ui.view">
        <field name="name">pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='receipt_header']" position="attributes">
                <attribute name='widget'>html</attribute>
            </xpath>
            <xpath expr="//field[@name='receipt_footer']" position="attributes">
                <attribute name='widget'>html</attribute>
            </xpath>
            <xpath expr="//div[@id='iface_invoicing']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" >
                    <div class="o_setting_right_pane">
                        <label for ="pos_name_order"/>
                        <div class="text-muted">
                            <field name="pos_name_order"/>
                        </div>
                        <label for="pos_tiket"/>
                        <div class="text-muted">
                            Formato ticket.
                        </div>
                        <div class="content-group mt16">
                            <field name="pos_tiket" required="1"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</incore>
