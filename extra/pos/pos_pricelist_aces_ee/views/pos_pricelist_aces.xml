<?xml version="1.0" encoding="utf-8"?>
<!-- vim:fdn=3:-->
<incore>

    <template id="pos_pricelist_aces_index" name="pos_pricelist_aces_ee assets" inherit_id="point_of_sale.index">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/pos_pricelist_aces_ee/static/src/js/pos.js"></script>
        </xpath>
    </template>
    <data>
	    <record model="ir.ui.view" id="ace_view_pos_config_form">
	         <field name="name">pos.config.form.view.inherit</field>
	         <field name="model">pos.config</field>
	         <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	         <field name="arch" type="xml">
	            <xpath expr="//div[@id='pricelist_setting']//div[hasclass('o_setting_right_pane')]//div[hasclass('content-group')]//div[last()]" position="before">
	                <div class="row mt16" title="Use Shortcut To Open Pricelist Popup">
		                <label string="Shortcut Key" for="open_pricelist_popup" class="col-md-3 o_light_label"/>
		                <field name="open_pricelist_popup"/>
		            </div>
	            </xpath>
	        </field>
	    </record>
    </data>
</incore>