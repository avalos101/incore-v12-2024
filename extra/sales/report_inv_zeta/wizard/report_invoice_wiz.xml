<?xml version="1.0" encoding="utf-8"?>
<incore>

    <record id="invoice_zeta_report_view" model="ir.ui.view">
        <field name="name">Comprobante de informe diario</field>
        <field name="model">report.invoice.zeta</field>
        <field name="arch" type="xml">
        <form string="Opciones de Reporte">
            <group col="4">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="user_ids" widget="many2many_tags" default_focus="1" options="{'no_create': True}"/>
            </group>
            <footer>
                <button name="print_report" 
                    string="Print" 
                    type="object" 
                    default_focus="1" 
                    class="oe_highlight" 
                    icon="fa-print"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_invoice_zeta_report" model="ir.actions.act_window">
        <field name="name">Comprobante de informe diario</field>
        <field name="res_model">report.invoice.zeta</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_informes_inv_z" name="Informe de Ventas" parent="account.menu_finance_receivables" sequence="30"/>

    <menuitem id="menu_invoice_zeta_report" action="action_invoice_zeta_report" parent="report_inv_zeta.menu_informes_inv_z" sequence="4"/>

</incore>
