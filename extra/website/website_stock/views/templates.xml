   <template id="cart_lines_default_code" inherit_id="website_sale.cart_lines" priority="99">
       <xpath expr="//table/thead/tr/th[2]" position="before">
           <th width="100" class="text-center">SKU</th>
       </xpath>
       <xpath expr="//table/tbody/t/tr/td[2]" position="after">
           <td class="text-left" name="default_code">
               <span t-field="line.product_id.default_code"/>
           </td>
       </xpath>
   </template>

   <template id="cart_lines_total" inherit_id="website_sale.cart_lines" priority="99">
       <xpath expr="//table/thead/tr/th[6]" position="after">
           <th width="100" class="text-center">Total C/Impuestos</th>
       </xpath>
       <xpath expr="//table/tbody/t/tr/td[6]" position="after">
           <td class="text-center" name="total">
              <span t-esc="(line.product_uom_qty * line.price_reduce_taxinc)" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
           </td>
       </xpath>
   </template>

