<?xml version="1.0" encoding="utf-8"?>
<incore>

    <record id="payment_so_inv_report_view" model="ir.ui.view">
        <field name="name">Informe Consolidado de Ventas</field>
        <field name="model">report.payment.so.inv.wiz</field>
        <field name="arch" type="xml">
        <form string="Opciones de Reporte">
            <group col="4">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="user_ids" widget="many2many_tags" default_focus="1" options="{'no_create': True}"/>
            </group>
            <footer>
                <button name="print_report"
                    string="Print"
                    type="object"
                    default_focus="1"
                    class="oe_highlight"
                    icon="fa-print"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_report_inv_so" model="ir.actions.act_window">
        <field name="name">Cuadre Diario de Caja</field>
        <field name="res_model">report.payment.so.inv.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_report_inv_so_details" action="action_report_inv_so" parent="point_of_sale.menu_point_rep" sequence="4"/>

</incore>
